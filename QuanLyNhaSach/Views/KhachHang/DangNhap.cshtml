@{
    ViewBag.Title = "Đăng nhập";
}

<h2>Đăng nhập</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Tên đăng nhập</label>
            <div class="col-md-10">
                <input type="text" name="TaiKhoan" class="form-control" />
                <span class="text-danger">@ViewData["Loi1"]</span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mật khẩu</label>
            <div class="col-md-10">
                <input type="password" name="MatKhau" class="form-control" />
                <span class="text-danger">@ViewData["Loi2"]</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng nhập" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Trở về Trang chủ", "Index", "Home")
    </div>


    if (ViewBag.ThongBao != null)
    {
        <div class="alert alert-danger" style="margin-top: 10px;">
            @ViewBag.ThongBao
        </div>
    }
}