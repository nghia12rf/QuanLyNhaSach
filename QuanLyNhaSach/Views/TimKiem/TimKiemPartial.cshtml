@using (Html.BeginForm("KetQuaTimKiem", "TimKiem", FormMethod.Get, new { @class = "form-horizontal" }))
{
    <div class="panel panel-default">
        <div class="panel-body">

            <div class="form-group" style="margin-bottom: 10px;">
                <label class="control-label col-md-12" style="text-align: left;">Tên sản phẩm:</label>
                <div class="col-md-12">
                    <input type="text" name="sTuKhoa" class="form-control" placeholder="Từ khóa..." />
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 10px;">
                <label class="control-label col-md-12" style="text-align: left;">Chủ đề:</label>
                <div class="col-md-12">
                    @Html.DropDownList("MaChuDe", ViewBag.ListChuDe as SelectList, "Tất cả chủ đề", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 10px;">
                <label class="control-label col-md-12" style="text-align: left;">Giá:</label>
                <div class="col-md-12">
                    <div class="checkbox">
                        <label><input type="checkbox" name="gia" value="1"> 0-10.000 VNĐ</label>
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" name="gia" value="2"> 11.000-20.000 VNĐ</label>
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" name="gia" value="3"> 21.000-40.000 VNĐ</label>
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" name="gia" value="4"> Lớn hơn 40.000 VNĐ</label>
                    </div>
                </div>
            </div>

            <div class="form-group" style="margin-top: 15px;">
                <div class="col-md-12">
                    <input type="submit" value="Search" class="btn btn-primary btn-block" />
                </div>
            </div>
        </div>
    </div>
}